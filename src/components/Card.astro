---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<img src="/icon.png" alt="logo" class="center" width="69" height="69" style="float: right;">
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			Download the extension here.
		</p>
	</a>
</li>
<style>
	.center {
  display: block;
  margin-left: auto;
  margin-right: auto;
	}
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		transition: 0.2s;
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
		transform: scale(1.1);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
	.link-card:is(:hover, :focus-within) img {
		animation: shake 5.0s;
		animation-iteration-count: infinite;
		transition: 0.2s;
	}
	@keyframes shake {
	0% { transform: translate(0.5px, 0.5px) rotate(0deg) scale(1.2); }
	10% { transform: translate(-0.5px, -1px) rotate(-0.5deg) scale(1.2); }
	20% { transform: translate(-1.5px, 0px) rotate(0.5deg) scale(1.2); }
	30% { transform: translate(1.5px, 1px) rotate(0deg) scale(1.2); }
	40% { transform: translate(0.5px, -0.5px) rotate(0.5deg) scale(1.2); }
	50% { transform: translate(-0.5px, 1px) rotate(-0.5deg) scale(1.2); }
	60% { transform: translate(-1.5px, 0.5px) rotate(0deg) scale(1.2); }
	70% { transform: translate(1.5px, 0.5px) rotate(-0.5deg) scale(1.2); }
	80% { transform: translate(-0.5px, -0.5px) rotate(0.5deg) scale(1.2); }
	90% { transform: translate(0.5px, 1px) rotate(0deg) scale(1.2); }
	100% { transform: translate(0.5px, -1px) rotate(-0.5deg) scale(1.2); }
	}
</style>
